    android:longClickable="true"
    android:focusable="true"
    >
    <TextView
        android:id="@+id/new_tab_chip_btn"
        style="@style/chip_view_common_styles"
        android:background="@drawable/chip_view_selector"
        android:drawableStart="@drawable/ic_add_fave_icon"
        android:drawableLeft="@drawable/ic_add_fave_icon"
        android:drawableTint="?speedDialListSavedForLaterTheme"
        android:textColor="?speedDialListSavedForLaterTheme"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="11dp"
        android:paddingEnd="11dp"
        android:drawablePadding="6dp"
        android:text="@string/new_tab"
