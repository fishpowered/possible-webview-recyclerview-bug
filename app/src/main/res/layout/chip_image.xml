<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chip_image_layout"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:clickable="true"
    android:longClickable="true"
    android:focusable="true"
    >

    <!-- WHEN CHANGING THE PADDING IT ALSO NEEDS TO BE CHANGED IN @link SpeedDialItemChipViewHolder.updatePadding -->
    <ImageView
        style="@style/chip_view_common_styles"
        android:id="@+id/chip_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
    />
    <TextView
        android:id="@+id/chip_view_video_title"
        android:textColor="#ffffff"
        android:background="#88000000"
        android:textAlignment="textStart"
        android:textSize="12sp"
        android:visibility="gone"
        android:maxLines="1"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <TextView
        android:id="@+id/chip_image_show_more_hint"
        style="@style/speed_dial_show_more_ellipsis"
        android:layout_gravity="bottom|end"
        android:paddingBottom="10dp"
        android:layout_marginRight="8dp"
        android:textAlignment="textEnd"
         />
</FrameLayout>