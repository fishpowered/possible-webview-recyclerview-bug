<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/find_in_page_layout"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/context_menu_bg"
    app:layout_constraintBottom_toTopOf="@id/main_nav_bar_layout"
    >
    <ImageButton
        android:id="@+id/close_find_in_page"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="Close"
        android:src="@drawable/ic_close_open_tabs"
        android:tint="?contextMenuIconColour"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageButton
        android:id="@+id/find_next_in_page"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="Next"
        android:src="@drawable/ic_context_menu_find_next"
        app:layout_constraintRight_toLeftOf="@id/close_find_in_page"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageButton
        android:id="@+id/find_prev_in_page"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="Previous"
        android:src="@drawable/ic_context_menu_find_previous"
        app:layout_constraintRight_toLeftOf="@id/find_next_in_page"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <EditText
        android:id="@+id/find_in_page_text_input"
        android:layout_height="match_parent"
        android:textColor="?contextMenuIconColour"
        android:singleLine="true"
        android:textColorHint="?contextMenuIconColour"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/find_prev_in_page"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="@string/find_text_in_page"
        android:layout_width="0dp"
        android:paddingEnd="40dp"
        />
    <TextView
        android:id="@+id/find_in_page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/find_in_page_text_input"
        app:layout_constraintBottom_toBottomOf="@id/find_in_page_text_input"
        app:layout_constraintTop_toTopOf="@id/find_in_page_text_input"
        android:textColor="?contextMenuIconColour"
        android:text="0/0"
        android:textSize="12sp"
        android:paddingEnd="10dp"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>
