<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:startColor="?navBarGradientBeginColour"
                android:endColor="?navBarGradientEndColour"
                android:type="linear" />
        </shape>
    </item>
    <item android:top="0dp" android:height="1dp"
        tools:targetApi="m">
        <shape android:shape="rectangle" >
            <solid android:color="?navBarTopBorder" />
        </shape>
    </item>
</layer-list>